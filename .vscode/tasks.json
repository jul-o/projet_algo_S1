{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "./src/*.c", "-o", "main.exe", "-Wall", "-std=c99", "-ggdb"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}